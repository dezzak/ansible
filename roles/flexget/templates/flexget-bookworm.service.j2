# {{ ansible_managed }}

[Unit]
Description=FlexGet Daemon
After=network.target

[Service]
ExecStart={{ flexget.venv_home }}/bin/flexget daemon start
ExecStop={{ flexget.venv_home }}/bin/flexget daemon stop
ExecReload={{ flexget.venv_home }}/bin/flexget daemon reload
Environment=PATH={{ flexget.venv_home }}/bin:/usr/local/bin:/usr/bin:/bin
Environment=PYTHONIOENCODING=utf-8
Environment=VIRTUAL_ENV={{ flexget.venv_home }}
Environment=FGUSER="{{ flexget.user }}"
User={{ flexget.user }}

[Install]
WantedBy=default.target
