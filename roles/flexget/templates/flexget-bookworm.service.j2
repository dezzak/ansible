# {{ ansible_managed }}

[Unit]
Description=FlexGet Daemon
After=network.target

[Service]
ExecStart={{ venv_home }}/bin/flexget daemon start
ExecStop={{ venv_home }}/bin/flexget daemon stop
ExecReload={{ venv_home }}/bin/flexget daemon reload
Environment=PATH={{ venv_home }}/bin:/usr/local/bin:/usr/bin:/bin
Environment=PYTHONIOENCODING=utf-8
Environment=VIRTUAL_ENV={{ venv_home }}

[Install]
WantedBy=default.target
